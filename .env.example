# GoodTxt 多AI协同小说生成系统 - 环境配置

# 应用基本配置
APP_NAME=GoodTxt
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# 服务器配置
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000

# 数据库配置
# SQLite数据库文件路径
SQLITE_DATABASE_URL=sqlite:///./data/database/goodtxt.db

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ChromaDB配置
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./data/chroma

# JWT配置
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# AI API密钥 (至少配置一个)
# 硅基流动 (推荐，成本低)
SILICONFLOW_API_KEY=
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1

# DeepSeek (逻辑推理强)
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# 通义千问 (文本生成强)
QWEN_API_KEY=
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# MiniMax (质量监控好)
MINIMAX_API_KEY=
MINIMAX_BASE_URL=https://api.minimaxi.cn/v1

# CORS配置
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 缓存配置
CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# 生成任务配置
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT=1800  # 30分钟
MAX_CHAPTER_LENGTH=5000

# 文件存储配置
EXPORT_FORMAT=txt,md,docx
UPLOAD_MAX_SIZE=10485760  # 10MB
STATIC_FILES_PATH=./data/exports

# 监控配置
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# 安全配置
RATE_LIMIT_PER_MINUTE=60
API_KEY_REQUIRED=true

# 开发配置 (仅开发环境)
AUTO_RELOAD=true
DETAILED_ERRORS=true